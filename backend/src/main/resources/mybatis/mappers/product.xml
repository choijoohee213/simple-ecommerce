<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.choijoohee.ecommerce.product.repository.ProductRepository">
    <select id="selectAll" resultType="ProductDto">
        select delivery_group, name, price, quantity from product
    </select>

    <select id="selectById" resultType="ProductDto">
        select delivery_group, name, price, quantity from product where id = #{productId}
    </select>

</mapper>